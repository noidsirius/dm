<div class="col-sm-10 col-sm-offset-1">
  <%= form_for(@submission, html: {class: 'form-horizontal'}) do |f| %>
      <% @submission.errors.full_messages.each do |message| %>
          <div class="alert alert-danger">
            <%= message %>
          </div>
      <% end %>
      <div class="form-group">
        <%= f.label :problem, :class => 'control-label col-sm-3' %>
        <div class="col-sm-9">
          <%= f.hidden_field :problem_id, {value: @submission.problem_id} %>
          <%= text_field_tag 'problem-name', @submission.problem.title, :class => 'form-control', :disabled => 'true' %>
        </div>
      </div>
      <% if current_user.has_role?(:admin) %>
          <div class="form-group">
            <%= f.label :status, :class => 'control-label col-sm-3' %>
            <div class="col-sm-9">
              <%= f.number_field :status, :class => 'form-control' %>
            </div>
          </div>
      <% end %>
      <div class="form-group">
        <%= f.label :description, :class => 'control-label col-sm-3' %>
        <div class="col-sm-9">
          <%= f.text_area :description, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :attachment, :class => 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.file_field :attachment, :id => 'attachment-input' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-9 col-sm-offset-3">
          <%= f.submit :class => 'btn btn-primary', data: { disable_with: "Please wait..." } %>
        </div>
      </div>
  <% end %>
</div>