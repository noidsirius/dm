<div class="col-lg-10 col-lg-offset-1 box">
  <h2>
    ScoreBoard:
  </h2>
  <table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
      <th>TeamName</th>
      <th>Score</th>
      <th>Credit</th>
      <th>Solved Problems</th>
    </tr>
    </thead>
    <tbody>
    <% Profile.order(:credit).reverse.each do |profile| %>
        <tr>
          <% if profile.user.has_role?(:admin) %>
               <% next %>
            <%  end %>
          <td><%= profile.username %></td>
          <td><%= profile.credit %></td>
          <td><%= profile.get_credit %></td>
          <td><%= profile.get_solved_problems.count%></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>